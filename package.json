{
  "name": "my-marp-project",
  "version": "1.0.0",
  "description": "Useful Marp Presentation theme",
  "main": "index.js",
  "scripts": {
    "build": "marp",
    "web": "marp -I slides --html --output output --theme-set themes/advanced.css",
    "ppt": "marp -I slides --pptx --output output --theme-set themes/advanced.css --allow-local-files",
    "pdf": "marp -I slides --pdf --output output --theme-set themes/advanced.css --allow-local-files",
    "preview": "marp -I slides --html --output output --theme-set themes/advanced.css --preview"
  },
  "dependencies": {
    "markdown-it-container": "^4.0.0"
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^4.2.0"
  },
  "marp": {
    "themeSet": "./themes/advanced.css",
    "inputDir": "./slides",
    "output": "./output"
  }
}